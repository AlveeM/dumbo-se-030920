<h1>Log a new Activity for a Camper</h1>

<% if flash[:messages] %>
  <% flash[:messages].each do |message_str| %>
    <p>
      <%= message_str %>
    </p>
  <% end %>
<% end %>

<%= form_for @signup do |f| %>
  <%= f.label :time %>
  <%= f.number_field :time %>

  <%= f.label :camper_id %>
  <%= f.collection_select :camper_id, @campers, :id, :name %>

  <%= f.label :activity_id %>
  <%= f.collection_select :activity_id, @activities, :id, :name %>

  <%= f.submit %>

<% end %>
