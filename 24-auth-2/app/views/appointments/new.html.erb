<div class="card">

  <%= form_for @appointment, html: { class: "form" } do |f| %>
    <h2 class="form-header">Make an Appointment</h2>

    <%= f.label :time %>
    <%= f.text_field :time %>

    <%= f.label :doctor_id %>
    <%= f.collection_select :doctor_id, @doctors, :id, :name %>
    
    <% if flash[:errors] %>
      <ol>
        <% flash[:errors].each do |err| %>
          <li class="error"><%= err %></li>
        <% end %>
      </ol>
    <% end %>

    <%= f.submit class: "button" %>
  <% end %>

</div>
